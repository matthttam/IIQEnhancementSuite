{
  "manifest_version": 3,
  "name": "IIQ RapidScan Sounds",
  "short_name": "IIQRapidScanSounds",
  "description": "Plays sounds when scanning an assets during rapid scanning.",
  "icons": {},
  "version": "1.0.2",
  "background": {
    "service_worker": "lib/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.incidentiq.com/*"
      ],
      "js": [
        "lib/js/content_script.js"
      ]
    }
  ],
  "options_page": "lib/options/options.html",
  "minimum_chrome_version": "109",
  "web_accessible_resources": [
    {
      "resources": [
        "lib/media/valid.mp3",
        "lib/media/boop.wav"
      ],
      "matches": [
        "https://*.incidentiq.com/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "https://*.incidentiq.com/*"
  ]
}